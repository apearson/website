{
  "name": "apearson-website",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "yarn run build:scripts && hexo generate",
    "build:scripts": "webpack --config webpack.prod.ts",
    "clean": "rm -r public dist db.json",
    "debug": "yarn run serve & yarn run gen",
    "gen": "hexo generate -w",
    "rebuild": "yarn run clean && yarn run build",
    "serve": "webpack-dev-server --config webpack.dev.ts --progress --color"
  },
  "hexo": {
    "version": "3.8.0"
  },
  "dependencies": {
    "chart.js": "^2.7.3"
  },
  "devDependencies": {
    "@types/chart.js": "^2.7.45",
    "@types/uglifyjs-webpack-plugin": "^1.1.0",
    "@types/webpack": "^4.4.24",
    "@types/webpack-dev-server": "^3.1.2",
    "@types/webpack-merge": "^4.1.3",
    "hexo": "^3.8.0",
    "hexo-generator-archive": "^0.1.4",
    "hexo-generator-category": "^0.1.3",
    "hexo-generator-index": "^0.2.0",
    "hexo-generator-tag": "^0.2.0",
    "hexo-renderer-ejs": "^0.3.0",
    "hexo-renderer-marked": "^0.3.0",
    "hexo-renderer-stylus": "^0.3.1",
    "ts-loader": "^5.3.3",
    "ts-node": "^8.0.2",
    "typescript": "^3.3.3",
    "uglifyjs-webpack-plugin": "^2.1.1",
    "webpack": "^4.29.4",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "^3.1.14",
    "webpack-merge": "^4.2.1"
  }
}